        <resources.dir>${basedir}/src/main/resources</resources.dir>
        <osgi.import>
            !ch.ethz.ssh2,
            !freemarker.cache.*,
            !freemarker.template,
            !javax.*,
            !org.apache.commons.*,
            !org.apache.ibatis.annotations,
            !org.apache.ibatis.io,
            !org.aspectj.lang,
