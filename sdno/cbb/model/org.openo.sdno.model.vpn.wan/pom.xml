    <artifactId>org.openo.sdno.model.vpn.wan</artifactId>
    <version>2.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>org.openo.sdno.model.vpn.wan</name>

    <dependencies>
        <dependency>
            <groupId>com.puer</groupId>
            <artifactId>com.puer.framework.base</artifactId>
            <version>1.0.1-SNAPSHOT</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>   
        <dependency>
            <groupId>org.openo.sdno</groupId>
            <artifactId>org.openo.sdno.frame</artifactId>
            <version>2.0-SNAPSHOT</version>
            <type>bundle</type>
        </dependency>   
        <dependency>
            <groupId>org.openo.sdno</groupId>
            <artifactId>org.openo.sdno.inventory.sdk</artifactId>
            <version>2.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    
    <properties>
